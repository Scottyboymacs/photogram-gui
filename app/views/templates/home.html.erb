    
    <h1>List of users</h1>

<form action="/add_user">
  <label for="input_username">Username</label>
  <input id="input_username" type="text" name="new_username" placeholder="Enter a username...">

  <button>Add user</button>
</form>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>

<% @list_of_users.each do |user|%>

  <tr>
    <td>
      <%= user.id%>
    </td>

    <td>
      <%= user.username%>
    </td>

    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
<% end %>
