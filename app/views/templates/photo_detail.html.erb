  
  <h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="https://robohash.org/<%=@photo.id%>?size=300x300&amp;set=set1">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p><%=@photo.caption%></p>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%=@photographers.where(:id => @photo.owner_id).first.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%=@photo.created_at%>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/777">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="https://robohash.org/dolorehicincidunt.png?size=300x300&amp;set=set1">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo...">Once youâ€™ve accepted your flaws, no one can use them against you.</textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photos/<%=@photo.id%>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
  <% @comments.each do |comment| %>
    <th>Author</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <tr>
    <td>
      <%= @photographers.where(:id => comment.author_id).first.username%>
    </td>

    <td>
      <%= comment.body%>
    </td>

    <td>
      <%= comment.created_at%>
    </td>
  <%end%>  
  </tr>
  
  